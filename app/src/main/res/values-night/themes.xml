<resources>
    <!-- Base application theme. -->
    <style name="Theme.ColorIA" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Navy</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/NewBlue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="backgroundColor">#1D1E1E</item>
        <item name="materialAlertDialogTheme">@style/AlertDialogTheme</item>


        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BottomNav">
        <item name="android:background">@color/Navy</item>
        <item name="itemIconTint">@color/LGrey</item>
        <item name="itemTextColor">@color/Grey</item>

    </style>
</resources>